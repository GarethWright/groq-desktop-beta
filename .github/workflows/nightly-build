# .github/workflows/nightly-build.yml
name: Nightly Upstream Sync & Build

on:
  schedule:
    - cron: '0 0 * * *'   # every night at 00:00 UTC

jobs:
  sync-and-build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3
        with:
          fetch-depth: 0   # fetch all history so we can merge upstream

      - name: Configure Git user
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'

      - name: Add & fetch upstream
        run: |
          git remote add upstream "${{ github.event.repository.parent.clone_url }}"
          git fetch upstream

      - name: Merge upstream changes
        run: |
          git checkout main
          git merge --no-edit upstream/main

      - name: Push merged changes
        run: |
          git push origin main

      - name: Setup Node.js & pnpm cache
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'pnpm'

      - name: Install pnpm
        run: npm install -g pnpm

      - name: Install dependencies
        run: pnpm install

      - name: Build distribution
        run: pnpm dist

      - name: Upload build artifacts
        uses: actions/upload-artifact@v3
        with:
          name: groq-desktop-beta-dist
          path: |
            dist/**
